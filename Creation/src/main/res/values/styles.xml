<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/CircleBinderActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppNoActionBarTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CircleBinderActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/circlebinder_actionbar_background</item>
        <item name="android:backgroundSplit">@color/circlebinder_actionbar_background</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActionBarCircleDetail">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/circlebinder_material_list_key_line_container_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/circlebinder_material_list_key_line_container_padding_horizontal</item>
        <item name="android:background">@color/circlebinder_actionbar_background</item>
    </style>

    <style name="CircleBinderSectionHeadTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/circlebinder_app_head_background</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/circlebinder_head_section_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/circlebinder_head_section_padding_vertical</item>
        <item name="android:paddingRight">@dimen/circlebinder_head_section_padding_horizontal</item>
        <item name="android:paddingBottom">@dimen/circlebinder_head_section_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/circlebinder_head_section_padding_horizontal</item>
    </style>

    <style name="CircleBinderCircleCutView">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="CircleBinderCircleListItemCircleName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CircleBinderCardContainer">
        <item name="android:background">@color/circlebinder_app_card_container_background</item>
    </style>

    <style name="CircleBinderCardList">
        <item name="android:background">@color/circlebinder_app_card_container_background</item>
        <item name="android:divider">@color/circlebinder_app_card_container_background</item>
        <item name="android:dividerHeight">4dp</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:textFilterEnabled">true</item>
        <item name="android:padding">@dimen/circlebinder_spacer_small</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:listSelector">@drawable/circlebinder_list_selector_card_item</item>
    </style>

    <style name="CircleBinderCardItem">
        <item name="android:background">@color/circlebinder_app_card_item_background</item>
    </style>

</resources>
