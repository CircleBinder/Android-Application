<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/CircleBinderActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppNoActionBarTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CircleBinderActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/circlebinder_actionbar_background</item>
        <item name="android:backgroundSplit">@color/circlebinder_actionbar_background</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActionBarCircleDetail">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/circlebinder_material_list_key_line_container_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/circlebinder_material_list_key_line_container_padding_horizontal</item>
        <item name="android:background">@color/circlebinder_actionbar_background</item>
    </style>

</resources>
