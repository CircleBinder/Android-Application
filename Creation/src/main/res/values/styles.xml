<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/CircleBinderActionBar</item>
    </style>

    <style name="AppNoActionBarTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <color name="circlebinder_actionbar_background">#70b025</color>
    <style name="CircleBinderActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/circlebinder_actionbar_background</item>
        <item name="android:backgroundSplit">@color/circlebinder_actionbar_background</item>
    </style>

</resources>
