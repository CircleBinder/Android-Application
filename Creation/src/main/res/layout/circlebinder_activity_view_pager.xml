<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        layout="@layout/circlebinder_actionbar_circle_detail"
        android:id="@+id/circlebinder_activity_view_pager_header"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        />

    <android.support.v4.view.ViewPager
        android:layout_below="@+id/circlebinder_activity_view_pager_header"
        android:id="@+id/circlebinder_activity_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</RelativeLayout>