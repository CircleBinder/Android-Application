<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        layout="@layout/circlebinder_actionbar_circle_detail"
        android:id="@+id/circlebinder_activity_view_pager_header"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        />

    <RelativeLayout
        android:layout_below="@+id/circlebinder_activity_view_pager_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/circlebinder_activity_view_pager"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <ImageView
            android:id="@+id/circlebinder_activity_view_pager_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_action_light_back"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/circlebinder_activity_view_pager_forward"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_action_light_forward"
            android:visibility="gone"
            />

    </RelativeLayout>

</RelativeLayout>