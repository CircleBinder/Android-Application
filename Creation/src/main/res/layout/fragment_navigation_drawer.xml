<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    >

    <ListView
        android:id="@+id/fragment_navigation_drawer_menu_list"
        android:layout_above="@+id/circlebinder_fragment_dashboard_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <View
        android:id="@+id/circlebinder_fragment_dashboard_border"
        android:layout_above="@+id/circlebinder_fragment_dashboard_header"
        android:layout_width="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_height="1dp"
        android:background="#ccc"
        />

    <include
        layout="@layout/circlebinder_fragment_dashboard_header"
        android:id="@+id/circlebinder_fragment_dashboard_header"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</RelativeLayout>
