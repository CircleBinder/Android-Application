<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CircleBinderCardContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:id="@+id/fragment_checklist_header_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="54dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:paddingLeft="@dimen/circlebinder_spacer_small"
        android:paddingRight="@dimen/circlebinder_spacer_small"
        android:background="@color/circlebinder_app_card_item_background"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/circlebinder_search_circle"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/ic_menu_search"
            />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/circlebinder_app_card_container_background"
        />

    <GridView
        style="@style/CircleBinderCardList"
        android:id="@+id/circlebinder_fragment_checklist_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/circlebinder_spacer_small"
        android:paddingRight="@dimen/circlebinder_spacer_small"
        android:numColumns="2"
        android:horizontalSpacing="8dp"
        android:verticalSpacing="8dp"
        tools:listitem="@layout/circlebinder_circle_list_item"
        />

</LinearLayout>