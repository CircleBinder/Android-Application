<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="circlebinder.creation.app.phone.HomeActivity"
    >

    <TextView
        android:id="@+id/creation_activity_home_header_event_name"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingLeft="@dimen/common_baseline_padding"
        android:paddingRight="@dimen/common_baseline_padding"
        android:background="@color/app_theme_base"
        android:text="@string/app_event_name"
        android:textColor="#ffffff"
        android:textSize="@dimen/common_font_title"
        android:gravity="center_vertical"
        />

    <circlebinder.creation.checklist.ChecklistListView
        android:id="@+id/creation_activity_home_fragment_content"
        android:layout_below="@+id/creation_activity_home_header_event_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <net.ichigotake.common.view.FloatingActionButton
        android:id="@+id/creation_activity_home_search"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="16dp"
        />

</RelativeLayout>
