<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="circlebinder.common.app.CircleBinderApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:windowSoftInputMode="stateHidden"
        android:theme="@style/AppTheme.Light.DarkActionBar"
        tools:replace="android:label"
        >

        <activity
            android:name="circlebinder.reitaisai.app.phone.LauncherActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="circlebinder.reitaisai.app.phone.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_event_name"
            />

        <activity
            android:name="circlebinder.reitaisai.app.phone.ChangeLogActivity"
            android:label="@string/common_change_log"
            android:configChanges="orientation|screenSize"
            />

        <activity
            android:name="circlebinder.reitaisai.app.phone.DatabaseInitializeActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize"
            />

        <service
            android:name="circlebinder.reitaisai.initialize.DatabaseInitializeService"
            android:process=":service"
            android:exported="false"
            android:permission=""
            >
            <intent-filter>
                <action android:name="circlebinder.reitaisai.initialize.IInitializeBindService"/>
            </intent-filter>
        </service>

    </application>

</manifest>
