<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_home_card_header_height"
                android:background="@color/app_color_accent"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        android:layout_marginTop="@dimen/common_spacer_x_large"
        android:layout_marginLeft="@dimen/common_spacer_middle"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/common_spacer_x_large"
        android:layout_marginLeft="@dimen/common_spacer_middle"
        android:text="@string/app_name"
        android:textColor="#ffffff"
        android:textSize="@dimen/common_font_title"
        />

</RelativeLayout>