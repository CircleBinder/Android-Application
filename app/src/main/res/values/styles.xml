<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/AppActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/AppActionBar</item>
        <item name="colorPrimary">@color/app_color_primary</item>
        <item name="colorPrimaryDark">@color/app_color_primary_dark</item>
        <item name="colorAccent">@color/app_color_accent</item>
    </style>

    <style name="AppNoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/app_color_primary</item>
        <item name="colorPrimaryDark">@color/app_color_primary_dark</item>
        <item name="colorAccent">@color/app_color_accent</item>
    </style>

    <style name="AppActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/app_color_primary</item>
        <item name="colorPrimaryDark">@color/app_color_primary_dark</item>
        <item name="colorAccent">@color/app_color_accent</item>
    </style>

    <style name="CommonSectionHeaderLabel">
        <item name="android:minHeight">@dimen/common_baseline_list_item_height</item>
        <item name="android:textSize">@dimen/common_font_subhead</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/common_section_head_label_padding_vertical</item>
        <item name="android:paddingRight">@dimen/common_section_head_label_padding_horizontal</item>
        <item name="android:paddingBottom">@dimen/common_section_head_label_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/common_section_head_label_padding_horizontal</item>
    </style>

    <style name="CommonSectionContent">
        <item name="android:textSize">@dimen/common_font_body</item>
        <item name="android:paddingTop">@dimen/common_spacer_x_small</item>
        <item name="android:paddingRight">@dimen/common_spacer_x_small</item>
        <item name="android:paddingBottom">@dimen/common_spacer_x_small</item>
        <item name="android:paddingLeft">@dimen/common_spacer_x_small</item>
    </style>

    <style name="CommonCircleDetailHeader">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/app_color_primary</item>
    </style>

    <style name="CommonChecklistList">
        <item name="android:background">@color/common_card_container_background</item>
    </style>

    <style name="CommonSubSectionHeader">
        <item name="android:background">@color/common_card_container_background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingRight">@dimen/common_baseline_padding</item>
        <item name="android:paddingLeft">@dimen/common_baseline_padding</item>
    </style>

    <style name="CommonCircleListItemName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CommonCardList">
        <item name="android:divider">@color/common_card_container_background</item>
        <item name="android:dividerHeight">@dimen/common_card_container_divider_height</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:textFilterEnabled">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingTop">@dimen/common_card_container_divider_height</item>
        <item name="android:paddingBottom">@dimen/common_card_container_divider_height</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="CommonCardItem">
        <item name="android:background">@color/common_card_item_background</item>
    </style>

</resources>
