<resources>

    <style name="CommonCircleListItemName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CommonCardList">
        <item name="android:divider">@color/common_card_container_background</item>
        <item name="android:dividerHeight">4dp</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:textFilterEnabled">true</item>
        <item name="android:padding">@dimen/common_spacer_x_small</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:listSelector">@drawable/common_card_item_selector</item>
    </style>

    <style name="CommonCardItem">
        <item name="android:background">@color/common_card_item_background</item>
    </style>

</resources>
