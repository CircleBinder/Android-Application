<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/view_carousel_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view_carousel_indicators"
        />

    <LinearLayout
        android:id="@+id/view_carousel_indicators"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/view_carousel_pager_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:drawableRight="@drawable/ic_action_light_previous_item"
        android:background="#66ffffff"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/view_carousel_pager_forward"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:drawableRight="@drawable/ic_action_light_next_item"
        android:background="#66ffffff"
        android:visibility="visible"
        />

</RelativeLayout>