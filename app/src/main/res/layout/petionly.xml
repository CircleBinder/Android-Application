<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:baselineAligned="false"
    android:paddingLeft="@dimen/common_spacer_x_small"
    android:paddingRight="@dimen/common_spacer_x_small"
    >

    <TextView
        style="@style/CommonSectionHeaderLabel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_baseline_list_item_height"
        android:text="SC65開催のプチオンリー"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:background="@drawable/common_card_item_selector"
            >


            <ImageView
                style="@style/AppPetiOnlyThumbnail"
                android:id="@+id/event_heads_up_peti_only_1"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginRight="@dimen/common_spacer_x_small"
                android:layout_alignParentLeft="true"
                android:src="@drawable/tutorial_add_checklist"
                />

            <TextView
                style="@style/AppPetiOnlyTitle"
                android:id="@+id/event_heads_up_peti_only_1_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/event_heads_up_peti_only_1"
                android:layout_marginBottom="@dimen/common_spacer_xx_small"
                android:text="No μ'sic, No Live!"
                />

            <TextView
                style="@style/AppPetiOnlyDescription"
                android:layout_toRightOf="@+id/event_heads_up_peti_only_1"
                android:layout_below="@+id/event_heads_up_peti_only_1_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="「ラブライブ！ School idol project」ジャンル"
                />

        </RelativeLayout>

        <View
            android:layout_width="@dimen/common_spacer_x_small"
            android:layout_height="match_parent"
            />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:background="@drawable/common_card_item_selector"
            >

            <ImageView
                style="@style/AppPetiOnlyThumbnail"
                android:id="@+id/event_heads_up_peti_only_2"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/common_spacer_x_small"
                android:src="@drawable/tutorial_add_checklist"
                />

            <TextView
                style="@style/AppPetiOnlyTitle"
                android:id="@+id/event_heads_up_peti_only_2_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/event_heads_up_peti_only_2"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/common_spacer_xx_small"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="おむ☆フェス"
                />

            <TextView
                style="@style/AppPetiOnlyDescription"
                android:layout_toRightOf="@+id/event_heads_up_peti_only_2"
                android:layout_below="@+id/event_heads_up_peti_only_2_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="おむつっ娘メイン"
                />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>