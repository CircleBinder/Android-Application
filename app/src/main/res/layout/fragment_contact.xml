<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/fragment_contact_send"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:minWidth="240dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/common_spacer_middle"
        android:layout_marginRight="@dimen/common_spacer_middle"
        android:layout_marginBottom="@dimen/common_spacer_middle"
        android:layout_marginLeft="@dimen/common_spacer_middle"
        android:text="@string/common_send_feedback_by_mail"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_spacer_middle"
        android:paddingLeft="@dimen/common_spacer_middle"
        android:paddingRight="@dimen/common_spacer_middle"
        android:text="@string/common_send_feedback_description"
        />

    <TextView
        style="@style/CommonSectionHeaderLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/common_twitter_official_account_label"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_spacer_x_small"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_spacer_x_small"
            android:text="@string/common_twitter_official_account_label"
            />

        <TextView
            android:id="@+id/twitter_official_account_screen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_twitter_official_account_screen_name"
            android:autoLink="web"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_spacer_x_small"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_spacer_x_small"
            android:text="@string/common_twitter_official_hash_tag_label"
            />

        <TextView
            android:id="@+id/twitter_official_hash_tag_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_twitter_official_hash_tag_name"
            android:autoLink="web"
            />

    </LinearLayout>

</LinearLayout>