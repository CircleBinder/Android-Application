<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="circlebinder.common.app.phone.CircleSearchActivity"
    >

    <circlebinder.common.search.InputKeywordView
        android:id="@+id/common_activity_circle_search_option_keyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_spacer_x_small"
        android:layout_marginRight="@dimen/common_spacer_x_small"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaaaaa"
        />


    <circlebinder.common.search.CircleSearchView
        android:id="@+id/common_activity_circle_search_circles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>