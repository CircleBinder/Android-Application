<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    tools:context="circlebinder.common.checklist.ChecklistListFragment"
    >

    <GridView
        style="@style/CommonCardList"
        android:id="@+id/create_view_checklist_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:layout_marginTop="4dp"
        android:numColumns="3"
        android:horizontalSpacing="4dp"
        android:verticalSpacing="4dp"
        android:padding="4dp"
        tools:listheader="@layout/enjoy_creation_search_guidance"
        tools:listitem="@layout/checklist_item"
        />

    <include
        layout="@layout/common_home_grid_header"
        android:id="@+id/creation_view_checklist_list_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        />

</FrameLayout>