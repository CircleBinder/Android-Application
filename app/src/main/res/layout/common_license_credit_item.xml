<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CommonCardItem"
    android:id="@+id/common_license_credit_item_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/common_license_credit_item_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/common_spacer_middle"
        android:layout_marginRight="@dimen/common_spacer_middle"
        android:gravity="center_vertical"
        android:textSize="@dimen/common_font_title"
        tools:text="CircleBinder Common Library"
        />

    <TextView
        android:id="@+id/common_license_credit_item_copyright"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/common_spacer_middle"
        android:layout_marginRight="@dimen/common_spacer_middle"
        android:gravity="center_vertical"
        android:textSize="@dimen/common_font_subhead"
        tools:text="Â©Copyright 2014 ichigotake"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/common_spacer_x_small"
        android:layout_marginRight="@dimen/common_spacer_x_small"
        android:background="@color/common_card_container_background"
        />

    <TextView
        android:id="@+id/common_license_credit_item_license_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_spacer_middle"
        tools:text="@string/common_open_source_license_credit_license_apache_license_v2"
        />

    <TextView
        android:id="@+id/common_license_credit_item_license_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_spacer_middle"
        android:autoLink="web"
        android:visibility="gone"
        tools:visibility="visible"
        />

</LinearLayout>